<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<%= link_to 'New Portfolio', new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
	<h3><%= portfolio_item.title %></h3>
	<h4><%= portfolio_item.subtitle %></h4>
	<%= image_tag portfolio_item.thumb_img unless portfolio_item.thumb_img.nil? %>
	<p><%= portfolio_item.body %></p>
	<%= link_to 'Show', portfolio_show_path(portfolio_item) %>
    <%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
    <%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
<br>
<%= link_to 'New Portfolio', new_portfolio_path %>